<div class="movie">
{{#each model as |movie| }}
    <h1>{{movie.title}}</h1>
    <div class="movie-characters">
        <div class="attribute-card">
            <h2>Characters</h2>
            <ul>
            {{#each movie.characters as |character|}}
                {{#link-to "characters.name" character.name}}
                    <li>{{character.name}}</li>
                {{/link-to}}
            {{else}}
                To be added
            {{/each}}
            </ul>
        </div>
    </div>
{{/each}}
</div>
<div class="attribute-card">
    <h2>Other movies</h2>
</div>
